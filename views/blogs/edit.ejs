<%- include("../partials/header"); %>
<div class="container">
    <div class="row d-block">



        <div style="width: 30%; margin: 25px auto; text-align: center;">

            <h1>EDIT <%= blog.name %></h1>


            <form action="/blogs/<%=blog._id%>/?_method=PUT" method="POST">

                <div class="form-group">
                    <input class="form-control" type="text" value="<%= blog.name %>" name="blog[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= blog.image%>" name="blog[image]">
                </div>

                <div class="form-group">
                    <textarea class = "form-control mb-2" type="text" name ="blog[description]" rows="10"><%= blog.description %></textarea>
                </div>

                <div class="form-group">
                    <input class="btn btn-success btn-lg form-control" type="submit">
                </div>





            </form>
            <a href="/">Go Back</a>
        </div>

    </div>
</div>
<%- include("../partials/footer"); %>