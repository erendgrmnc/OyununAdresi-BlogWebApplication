<%- include("../partials/header"); %>



<div class="container mt-5">


    <div class="header d-flex align-items-center justify-content-center">

        <h1 class="title">Oyunun Adresi </h1>

    </div>

    <div class="row">
        <div class="col-12">
            <h3 class="mt-3" style="color: white;">En Güncel Yazılarımız !</h3>
            <% if(currentUser && currentUser.isAdmin == true){ %>
            <a href="/index/new">Create New Blog</a>
            <% } %>
        </div>
    </div>

    <div class="container">
        <div class="row d-flex">

            <% blogs.forEach(function(blogs){ %>

            <div class="col-md-3 col-sm-6 m-4" style="background-color: rgb(245, 182, 65);">
                <a style="text-decoration: none;" href="/blogs/<%= blogs._id %>">
                  

                        <div class=" img-thumbnail p-0" style="border-top: 0; background-color: rgb(245, 182, 65); border-color:rgb(245, 182, 65); " >
                            <img class="img-fluid" style="width: 550px; height: 200px;border-radius: 10px;"
                                src="<%=blogs.image%> " alt="">

                            <div class="caption m-3" style="text-align: center;">
                                <h4><%= blogs.name %> </h4>
                            </div>

                            <div class="m-">
                                <p><%= blogs.date.toDateString() %></p>
                            </div>



                        
                    </div>
                </a>
            </div>


            <% })  %>
        </div>
    </div>



</div>







<%- include("../partials/footer"); %>